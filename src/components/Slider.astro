    <button id="nextBtn"
        class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-primary text-white w-10 h-10 flex items-center justify-center rounded-full hover:bg-black transition" aria-label="Siguiente">
        <i class="fas fa-chevron-right"></i>
