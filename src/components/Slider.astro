<script>
    document.addEventListener("DOMContentLoaded", () => {
        const slider = document.getElementById("slider");
        const slides = slider?.children || [];
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");
        let currentSlide = 0;

        // Especificar el tipo de autoSlideInterval (number para navegadores)
        let autoSlideInterval: number;

        if (!slider || slides.length === 0) return;

        // Función para actualizar la posición del slider
        const updateSlider = () => {
            slider.style.transform = `translateX(-${currentSlide * 100}%)`;
        };

        // Función para iniciar el auto-slide con manejo de intervalos
        const handleAutoSlide = () => {
            // Limpia cualquier intervalo activo antes de iniciar uno nuevo
            if (autoSlideInterval) clearInterval(autoSlideInterval);

            // Crea un nuevo intervalo para auto-slide
            autoSlideInterval = window.setInterval(() => {
                currentSlide = (currentSlide + 1) % slides.length;
                updateSlider();
            }, 7000); // Ajusta este valor (en milisegundos) para cambiar la velocidad del slider
        };

        // Función para pausar el auto-slide
        const pauseAutoSlide = () => {
            if (autoSlideInterval) clearInterval(autoSlideInterval);
        };

        // Controlador de eventos para el botón anterior
        prevBtn?.addEventListener("click", () => {
            pauseAutoSlide(); // Pausa el auto-slide
            currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            updateSlider();
            handleAutoSlide(); // Reinicia el auto-slide
        });

        // Controlador de eventos para el botón siguiente
        nextBtn?.addEventListener("click", () => {
            pauseAutoSlide(); // Pausa el auto-slide
            currentSlide = (currentSlide + 1) % slides.length;
            updateSlider();
            handleAutoSlide(); // Reinicia el auto-slide
        });

        // Inicia el auto-slide al cargar la página
        handleAutoSlide();
        updateSlider();

        // Opcional: Limpiar el intervalo cuando sea necesario
        window.addEventListener("beforeunload", () => {
            pauseAutoSlide(); // Limpia el intervalo al salir de la página
        });
    });
</script>