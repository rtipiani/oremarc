<section class="py-16 bg-gradient-to-b from-gray-50 to-gray-200" id="contacto">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h3 class="text-3xl sm:text-4xl font-extrabold text-gray-800">
                Contáctanos
            </h3>
            <p class="text-base sm:text-lg text-gray-600 mt-4 max-w-2xl mx-auto">
                Estamos aquí para ayudarte. ¡Escríbenos y nos pondremos en contacto contigo!
            </p>
        </div>

        <form action="#" method="POST" class="bg-white p-8 md:p-12 rounded-xl shadow-lg max-w-3xl mx-auto">
            <div class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-semibold text-gray-700">
                        Nombre o Razón Social
                    </label>
                    <div class="relative mt-2">
                        <span class="absolute inset-y-0 left-2 flex items-center text-gray-400">
                            <i class="fas fa-user"></i>
                        </span>
                        <input type="text" id="name" name="name" placeholder="Tu nombre completo" class="block w-full rounded-lg border border-gray-300 focus:border-primary focus:ring-primary focus:outline-none focus:ring-offset-1 sm:text-sm pl-10 py-3" required />
                    </div>
                </div>

                <div>
                    <label for="email" class="block text-sm font-semibold text-gray-700">
                        Correo electrónico
                    </label>
                    <div class="relative mt-2">
                        <span class="absolute inset-y-0 left-2 flex items-center text-gray-400">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <input type="email" id="email" name="email" placeholder="tuemail@dominio.com" class="block w-full rounded-lg border border-gray-300 focus:border-primary focus:ring-primary focus:outline-none focus:ring-offset-1 sm:text-sm pl-10 py-3" required />
                    </div>
                </div>

                <div>
                    <label for="message" class="block text-sm font-semibold text-gray-700">
                        Mensaje
                    </label>
                    <div class="relative mt-2">
                        <textarea id="message" name="message" placeholder="Escribe tu mensaje aquí" class="block w-full rounded-lg border border-gray-300 focus:border-primary focus:ring-primary focus:outline-none focus:ring-offset-1 sm:text-sm pl-10 py-3 resize-none" rows="4" required></textarea>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="inline-flex justify-center items-center rounded-lg bg-black text-white font-semibold text-md px-6 py-3 shadow-md hover:bg-primary">
                        <i class="fas fa-paper-plane mr-2"></i>
                        Enviar mensaje
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>